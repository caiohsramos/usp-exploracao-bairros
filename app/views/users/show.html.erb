<h3>Usuário</h3>
<div class="row">
    <div class="col-md-6">
        <p>Nome: <%= @user.name if @user.name %></p>
        <p>Email: <%= @user.email if @user.email %></p>
    </div>
    <div class="col-md-1">
        <%= link_to "Adicionar amigo", add_friend_path, {class: "btn btn-default"} %>
    </div>
</div>



<h4>Favorite Places</h4>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead> 
<tbody>
    <% @userdata.each do |userdatum| %>
      <tr>
        <td><%= userdatum.name %></td>

        <td><%= link_to 'Mostrar', userdatum, class: 'btn btn-success' %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h4>Reviews</h4>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Nota</th>
      <th>Comentário</th>
      <th>Local</th>
      <th colspan="3"></th>
    </tr>
  </thead> 
<tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.rate %></td>
        <td><%= review.comment %></td>
        <td><%= Userdatum.where("place_id = ?", review.place_id)[0].name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Amigos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= User.find(friend.friend_id).name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

