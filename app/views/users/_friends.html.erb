<table class="table table-hover">
    <thead>
    <tr>
        <th><h3>Amigos</h3></th>
        <th colspan="2"></th>
    </tr>
    </thead>

    <tbody>
    <% @friends.each do |friend| %>
        <% if User.exists?(friend.friend_id) %>
        <tr>
            <td><%= link_to User.find(friend.friend_id).name, user_path(id: User.encrypt(friend.friend_id)) %></td>

            <% if @user == current_user %>
                <td><%= link_to 'Cancelar amizade', cancel_friend_path(friend_id: User.encrypt(friend.friend_id)), method: :delete, data: {confirm: 'VocÃª tem certeza?'}, class: 'btn btn-danger' %></td>
            <% end %>
        </tr>
        <% end %>
    <% end %>
    </tbody>
</table>