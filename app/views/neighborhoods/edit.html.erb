<div class="authform">
  <%= form_for @neighborhood do |f| %>
    <h3>Update <%= @neighborhood.name %> Neighborhood</h3>
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
    </div>
    
    <%= f.submit 'Update neighborhood', :class => 'button right' %>
  <% end %>
</div>
