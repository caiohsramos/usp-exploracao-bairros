<h3>Neighborhood</h3>
<p>Name: <%= @neighborhood.name %></p>

<div class="row">
    <div class="col-md-1"><%= link_to "Edit", edit_neighborhood_path, :class => "btn btn-primary btn_edit" if current_user.admin? %></div>
    <div class="col-md-2"><%= button_to "Delete neighborhood", neighborhood_path, :class => "btn btn-primary", :method => :delete, data: {confirm: "Are you sure you want to delete this item?"} if current_user.admin? %></div>
</div>


