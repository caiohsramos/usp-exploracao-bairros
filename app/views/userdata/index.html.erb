<p id="notice"><%= notice %></p>

<h1>Dados do Usuário</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome do local</th>
      <th>Comentário</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @userdata.each do |userdatum| %>
      <tr>
        <td><%= userdatum.name %></td>
        <td><%= userdatum.comment %></td>
        <td><%= link_to 'Mostrar', userdatum, class: "btn btn-success" %></td>
        <td><%= link_to 'Editar', edit_userdatum_path(userdatum), class: "btn btn-warning" %></td>
        <td><%= link_to 'Apagar', userdatum, method: :delete, data: { confirm: 'Você tem certeza?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Adicionar novo Dado', new_userdatum_path, class: "btn btn-primary" %>
