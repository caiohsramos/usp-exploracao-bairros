<h3>Locais Favoritos</h3>
<table class="table table-hover">
    <thead>
    <tr>
        <th>Nome</th>
        <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @userdata.each do |userdatum| %>
        <tr>
            <td><%= link_to userdatum.name, userdatum %></td>

            <% if current_user.id == userdatum.user_id %>
                <td><%= userdatum.comment %></td>
                <td>
                    <%= link_to 'Editar', edit_userdatum_path(userdatum), class: 'btn btn-warning' %>
                    <%= link_to 'Apagar', userdatum, method: :delete, data: {confirm: 'VocÃª tem certeza?'}, class: 'btn btn-danger' %>
                </td>
            <% end %>
        </tr>
    <% end %>
    </tbody>
</table>