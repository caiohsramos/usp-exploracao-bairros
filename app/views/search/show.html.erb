<div class="row container">
    <h2><%= @name %></h2>
    <p>
        <%= link_to 'Adicionar local', new_userdatum_path(:name => @name, :place_id => @place_id), class: 'btn btn-primary' if user_signed_in? %>
        <%= link_to 'Voltar', :back, class: 'btn btn-default' %>
    </p>

    <div class="col-md-4" style="background-color: whitesmoke">

        <h4>Endereço: </h4>
        <address><%= @formatted_address %></address>

        <br>

        <h4>Telefone:</h4>
        <address><%= @formatted_number %></address>

        <br>

        <h4>Horário de Funcionamento:</h4>
        <% @weekday_text.each do |day| %>
            <address><%= day %></address>
        <% end %>

        <h4>Nota</h4>
        <% if @count == 0 %>
            <address>Sem Nota</address>
        <% else %>
            <address><%= (@stars/@count).round(1) %> / 5.0</address>
        <% end %>
    </div>

    <div class="col-md-8">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <% (1..@photos.size).each do |i| %>
                    <li data-target="#myCarousel" data-slide-to="<%= i %>"></li>
                <% end %>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox" style="width:100%; height: 480px !important;">
                <div class="item active">
                    <img src=<%= @map %> class="img-thumbnail">
                </div>
                <% @photos.each do |photo| %>
                    <div class="item">
                        <img src=<%= photo %> class="img-thumbnail">
                    </div>
                <% end %>

            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

<br>

<div class="row container">

    <div class="col-md-4">
        <% if user_signed_in? %>
            <%= render :partial => 'reviews/form' %>
        <% end %>
    </div>

    <div class="col-md-8" style="background-color: whitesmoke">
        <table class="table table-hover">
            <thead>
            <th>
                <h4>Comentários:</h4>
            </th>
            <th colspan="2"></th>
            </thead>

            <tbody>
            <% @reviews.each do |review| %>
                <% if User.exists?(review.user_id) %>
                    <tr>
                        <td>
                            <h5>
                                <%= link_to User.find(review.user_id).name, user_path(id: User.encrypt(review.user_id)) %>
                                <br>
                                <small><%= review.updated_at %></small>
                            </h5>

                            <%= review.comment %>
                        </td>
                        <td>
                            <b>Nota</b>
                            <h3><%= review.rate %></h3>
                        </td>

                        <% if current_user != nil && review.user_id == current_user.id %>
                            <td>
                                <%= link_to 'Editar', edit_review_path(review), class: 'btn btn-warning' %>
                                <%= link_to 'Apagar', review, method: :delete, data: {confirm: 'Você tem certeza?'}, class: 'btn btn-danger' %>
                            </td>
                        <% else %>
                            <th colspan="4"></th>
                        <% end %>
                    </tr>
                <% end %>
            <% end %>
            </tbody>
        </table>
    </div>
</div>



